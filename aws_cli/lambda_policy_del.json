{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "GiveSESPermissionToInvokeFunction",
            "Effect": "Allow",
            "Principal": {
              "Service": "ses.amazonaws.com"
            },
            "Action": "lambda:InvokeFunction",
            "Resource": "arn:aws:lambda:us-east-1:${AWS_ACCOUNT}:function:FileDelete",
            "Condition": {
              "StringEquals": {
                "AWS:SourceAccount": "${AWS_ACCOUNT}"
              }
            }
        },
        {
          "Effect": "Allow",
          "Action": [
            "s3:GetObject",
            "s3:DeleteObject"
          ],
          "Resource": [
            "arn:aws:s3:us-east-1:${AWS_ACCOUNT}:${BUCKET_INC}/*",
            "arn:aws:s3:us-east-1:${AWS_ACCOUNT}:${BUCKET_INC}"
          ]
      },
      {
        "Effect": "Allow",
        "Action": [
          "s3:GetObject",
          "s3:PutObject",
          "s3:DeleteObject"
        ],
        "Resource": [
          "arn:aws:s3:us-east-1:${AWS_ACCOUNT}:${BUCKET_DEL}/*",
          "arn:aws:s3:us-east-1:${AWS_ACCOUNT}:${BUCKET_DEL}"
        ]
    }
  ]
}